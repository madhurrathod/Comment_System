generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  email String @unique
  password String 
}

model Comment {
 id        String   @id @default(auto()) @map("_id") @db.ObjectId
 parentId String?
 text  String
 author String
 timestamp DateTime @default(now())
 likes Int @default(0)
}

